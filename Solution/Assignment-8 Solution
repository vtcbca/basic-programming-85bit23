def print_alphabet_pattern(n):
    for i in range(n):
        print(' ' * (n - i - 1) * 2, end='')
        for j in range(i + 1):
            print(chr(65 + j), end=' ')
        for j in range(i - 1, -1, -1):
            print(chr(65 + j), end=' ')
        print()
n = int(input('Enter any number = '))
print_alphabet_pattern(n)
